# Database Configuration
# PostgreSQL connection URL
DB_URL=postgresql://username:password@localhost:5432/invitation_agent

# LLM API KEY
GOOGLE_GENAI_USE_VERTEXAI=0
GOOGLE_API_KEY=your-api-key

# Email Configuration
# Email credentials for sending invitations
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587

# Authentication Configuration
# Secret key for JWT token generation (CHANGE THIS IN PRODUCTION!)
SECRET_KEY=your-super-secret-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Backend API Configuration
APP_NAME=Invitation Assistant
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000

# Frontend UI Configuration
BACKEND_URL=http://localhost:8000
FRONTEND_HOST=0.0.0.0
FRONTEND_PORT=8001
FRONTEND_SHARE=false
